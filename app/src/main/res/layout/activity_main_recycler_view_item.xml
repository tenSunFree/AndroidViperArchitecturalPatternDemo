<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.activity.MainActivity">

    <ImageView
        android:id="@+id/image_view_latest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1440:192"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/view_main"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:background="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_latest" />

    <ImageView
        android:id="@+id/image_view_avatar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@+id/view_main"
        app:layout_constraintTop_toTopOf="@+id/view_main"
        app:layout_constraintDimensionRatio="74:74"
        android:layout_width="0dp"
        android:layout_height="20dp"/>

    <TextView
        android:textSize="12dp"
        android:textColor="#727272"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:maxEms="10"
        android:ellipsize="end"
        android:id="@+id/text_view_name"
        app:layout_constraintStart_toEndOf="@+id/image_view_avatar"
        app:layout_constraintTop_toTopOf="@+id/image_view_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginEnd="16dp"
        android:src="@drawable/icon_more"
        android:id="@+id/image_view_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_avatar"
        app:layout_constraintDimensionRatio="18:66"
        android:layout_width="0dp"
        android:layout_height="18dp"/>

    <TextView
        android:textSize="13dp"
        android:textColor="#585858"
        android:id="@+id/text_view_content"
        android:lineSpacingMultiplier="1.2"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="dgdgdgrgrrgrrgrgrgdgdgdgrgrrgrrgrgrgdgdgdgrgrrgrrgrgrgdgdgdgrgrrgrrgrgrgdgdgdgrgrrgrrgrgrgdgdgdgrgrrgrrgrgrg"
        app:layout_constraintBottom_toTopOf="@+id/image_view_like_bar"
        app:layout_constraintTop_toBottomOf="@+id/image_view_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/image_view_like_bar"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/icon_like_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="547:55"
        android:layout_width="0dp"
        android:layout_height="14dp"/>

    <View
        android:id="@+id/view_separation_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EAEAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_main" />
</androidx.constraintlayout.widget.ConstraintLayout>